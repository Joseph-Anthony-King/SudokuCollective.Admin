{
  "name": "@sudokucollective.admin/app",
  "version": "1.0.0-alpha.0",
  "private": true,
  "scripts": {
    "serve": "vite --host",
    "serve:iis": "vite --host --mode iisexpress",
    "serve:staging": "vite --host --mode staging",
    "serve:prod": "vite --host --mode production",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:dev": "run-p type-check \"build-only:dev {@}\" --",
    "build:iis": "run-p type-check \"build-only:iis {@}\" --",
    "build:staging": "run-p type-check \"build-only:staging {@}\" --",
    "test:unit": "vitest",
    "test:unit-ui": "vitest --ui",
    "test:unit-coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "build-only:dev": "vite build --mode development",
    "build-only:iis": "vite build --mode iis",
    "build-only:staging": "vite build --mode staging",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "axios": "^1.6.8",
    "encrypt-storage": "^2.13.2",
    "pinia": "^2.0.33",
    "pinia-persistedstate": "^0.1.2",
    "roboto-fontface": "*",
    "vite-plugin-vuetify": "^2.0.3",
    "vue": "^3.2.40",
    "vue-router": "^4.0.3",
    "vue3-toastify": "^0.0.5",
    "vuetify": "^3.0.7",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.10.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.7",
    "@types/webfontloader": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/tsconfig": "^0.5.1",
    "css-loader": "^6.7.1",
    "cypress": "^13.7.3",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-vue": "^8.7.1",
    "jsdom": "^24.0.0",
    "msw": "^2.3.3",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "~5.1.6",
    "vite": "^5.3.0",
    "vitest": "^1.5.0",
    "vue-tsc": "^2.0.13"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true,
      "es2022": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
